@model IEnumerable<Ashyana.UI.Web.ViewModel.MapLinks>

@{
    int counter = 1;

}
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog " style="width:1200px;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Link Details </h4>
            </div>
            <div class="modal-body">


                @using (Html.BeginForm("Update","MapRoleLinks",FormMethod.Post))
                {
                    <a href="@Url.Action("Create New", "Home")" class="btn btn-default">
                        <i class="glyphicon glyphicon-new-window"></i>
                        <span>
                            <strong>Create</strong>
                        </span>
                    </a>
                    <a href="@Url.Action("UpdateAll", "Home", new { onclick = "GetCheckedValues" })" class="btn btn-default">
                        <i class="glyphicon glyphicon-refresh"></i>
                        <span>
                            <strong>Update All</strong>
                        </span>
                    </a>
                    @*<p style="float:right;margin-right:30px;">
                            @Html.ActionLink("UpdateAll", "UpdateAll", null, new { @class = "btn btn-primary", onclick = "GetCheckedValues" })
                        </p>*@
                    <table class="table table-striped table-bordered dataTable">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.roleID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.linkID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.subLinkID)
                            </th>
                            <th><i class="glyphicon glyphicon-eye-open"></i>
                                @Html.DisplayNameFor(model => model.sublinkView)
                            </th>
                            <th><i class="glyphicon glyphicon-edit"></i>
                                @Html.DisplayNameFor(model => model.sublinkAdd)
                            </th>
                            <th><i class="glyphicon glyphicon-refresh"></i>
                                @Html.DisplayNameFor(model => model.sublinkUpdate)
                            </th>
                            <th><i class="glyphicon glyphicon-remove"></i>
                                @Html.DisplayNameFor(model => model.sublinkDelete)
                            </th>
                            <th><i class="glyphicon glyphicon-print"></i>
                                @Html.DisplayNameFor(model => model.sublinkPrint)
                            </th>
                            <th><i class="glyphicon glyphicon-check"></i>
                                @Html.DisplayNameFor(model => model.linkCheck)
                            </th>
                            <th><i class="glyphicon glyphicon-check"></i>
                                @Html.DisplayNameFor(model => model.subLinkcheck)
                            </th>
                            <th>
                                @*<a href="@Url.Action("", "")" class="btn btn-default">  <i class="glyphicon glyphicon-refresh"></i></a>
                                <a href="@Url.Action("", "")" class="btn btn-default">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                                <a href="@Url.Action("", "")" class="btn btn-default">    <i class="glyphicon glyphicon-remove"></i></a>*@
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.roleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.linkName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.subLinkName)
                                </td>
                                <td>
                                    @if (item.sublinkView == 1)
                                    {
                                        @Html.CheckBox("View_" + counter, true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("View_" + counter, isChecked: false)
                                    }

                                </td>
                                <td>
                                    @if (item.sublinkAdd == 1)
                                    {
                                        @Html.CheckBox("Add_" + counter, true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("Add_" + counter, false)
                                    }

                                </td>
                                <td>
                                    @if (item.sublinkUpdate == 1)
                                    {
                                        @Html.CheckBox("Update_" + counter, isChecked: true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("Update_" + counter, isChecked: false)
                                    }



                                </td>
                                <td>
                                    @if (item.sublinkDelete == 1)
                                    {
                                        @Html.CheckBox("Delete_" + counter, isChecked: true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("Delete_" + counter, isChecked: false)
                                    }

                                </td>
                                <td>
                                    @if (item.sublinkPrint == 1)
                                    {
                                        @Html.CheckBox("Print_" + counter, isChecked: true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("Print_" + counter, isChecked: false)
                                    }

                                </td>
                                <td>
                                    @if (item.linkCheck == 1)
                                    {
                                        @Html.CheckBox("Check_" + counter, isChecked: true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("Check_" + counter, isChecked: false)
                                    }

                                </td>
                                <td>
                                    @if (item.subLinkcheck == 1)
                                    {
                                        @Html.CheckBox("subLinkcheck_" + counter, isChecked: true)
                                    }
                                    else
                                    {
                                        @Html.CheckBox("subLinkcheck_" + counter, isChecked: false)
                                    }

                                </td>

                                <td>

                                    <a class="btn btn-default" href="@Url.Action("Update", "MapRoleLinks", new { id = item.roleLinkMapID })">
                                        <i class="glyphicon glyphicon-refresh"></i>
                                        update
                                    </a>
                                    <a class="btn btn-default" href="@Url.Action("Edit", "MapRoleLinks" ,new { id = item.roleLinkMapID})">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                        Edit
                                    </a>
                                    <a class="btn btn-default" href="@Url.Action("Delete", "MapRoleLinks", new { id = item.roleLinkMapID })">
                                        <i class="glyphicon glyphicon-remove"></i>
                                        Delete
                                    </a>
                          
                                </td>
                            </tr>
                                    counter = counter + 1;
                        }

                    </table>

                }
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {
        $("#myModal").modal('show');
    });


    function GetCheckedValues() {
        alert('hi');
    }

</script>
