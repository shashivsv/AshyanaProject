@model IEnumerable<Ashyana.UI.Web.Models.SubLink>


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog " style="width:650px;;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">List Details </h4>
            </div>
            <div class="modal-body">

                <table class=" table table-striped table-bordered datatable">
                    <tbody>
                        <tr>
                            <th></th>
                            <th>SubLinkName</th>
                            <th>subLinkPath</th>
                            <th>subLinkRank</th>

                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.Hidden("SubLinkId", @item.subLinkID)</td>
                            <td>@item.subLinkName</td>
                            <td>@item.subLinkPath</td>
                            <td>@item.subLinkRank</td>

                            <td>@Html.ActionLink("Edit", "Edit", new { id = item.subLinkID })</td>
                            <td>@Html.ActionLink("Details", "Details", new { id = item.subLinkID })</td>
                            <td>@Html.ActionLink("Delete", "Delete", new { id = item.subLinkID })</td>
                        </tr>
                        }

                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#myModal").modal('show');
    });

</script>