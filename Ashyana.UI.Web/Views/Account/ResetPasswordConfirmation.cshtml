@{
    ViewBag.Title = "Reset password confirmation";
}


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog " style="width:380px;">
        <!-- Modal content-->
        <div class="modal-content" style="background-color:yellow;">

            <button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></button>


            <div style="color:green;">
                <h3>
                    Your changed successfuly Please @Html.ActionLink("click here to log in", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </h3>
            </div>




        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {

        $("#myModal").modal('show');

    });



</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
