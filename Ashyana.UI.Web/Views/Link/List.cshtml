@model IEnumerable<Ashyana.UI.Web.Models.Link>


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog " style="width:650px;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Link Details </h4>
            </div>
            <div class="modal-body">
                <p>@Html.ActionLink("Create", "Create", "Link")
                <i class=" glyphicon-cutlery"></i>
                </p>
                <div style="max-height:500px;overflow-y:auto;">
                    <table class="table table-striped table-bordered datatable">
                        <tbody>
                            <tr>
                                <th></th>
                                <th>LinkName</th>
                                <th>LinkPath</th>
                                <th><i class="glyphicon glyphicon-pencil"></i></th>

                                <th><i class="glyphicon glyphicon-remove"></i></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.Hidden("LinkId", @item.linkID)</td>
                                    <td>@item.linkName</td>
                                    <td>@item.linkPath</td>
                                    @*<td style="word-wrap:break-word;">@item.linkDesc</td>*@
                                    <td>
                                        <a class="btn btn-default" href="@Url.Action("Edit", "Link", new { id = item.linkID })">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                            Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-default" href="@Url.Action("Delete", "Link", new { id = item.linkID })">
                                            <i class="glyphicon glyphicon-remove"></i>
                                            Delete
                                        </a>
                                    </td>
                                    @*<td>@Html.ActionLink("Delete", "Delete", new { id = item.linkID })</td>*@
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#myModal").modal('show');
    });

</script>